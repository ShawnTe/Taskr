<h1>Upcoming</h1>

<% if alert.present? %>
  <%= alert %><br />
<% end %>

<%= link_to "Add a task", new_task_path %>
<div class="upcoming-list">
    <% if @tasks.count >= 1 %>
      <ul>
          <% @tasks.each do |task| %>
            <li>
              <%= link_to task.title, task_path(task.id) %> <br />
              <%= task.first_due_date.strftime("%B %d, %Y") %>
            </li>
          <% end %>
      </ul>
    <% else %>
      Upcoming tasks will appear here. <%= link_to "Add a task here!", new_task_path %>
    <% end %>
</div>