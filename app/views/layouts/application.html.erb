<!DOCTYPE html>
<html>
  <head>
    <title>Taskr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="container">
      <nav class="sticky">
        <%= link_to '<i class="demo-icon icon-menu"></i>'.html_safe, root_path, class: 'nav-icon right' %>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
