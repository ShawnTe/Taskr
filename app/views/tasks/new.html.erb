<h1>New Task</h1>
<%= form_for @task, html: {class: "new-form"} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: @task.title || "Name of task" %>
  <br />
  <%= f.label :due %>
  <%= f.date_field :due, placeholder: @task.due || "Click arrow for calendar" %>
  <br />
  <%= f.label :frequency_unit, "Time units" %>
  <%= f.text_field :frequency_unit, placeholder: @task.frequency_unit || "I.e. years / months / weeks / days" %>
  <br />
  <%= f.label :frequency_number, "Number of units" %>
  <%= f.number_field :frequency_number, in: 1.0..31.0, step: 1.0, placeholder: @task.frequency_number || "# frequency. For ex 1 (time a year)." %>
  <br />
  <%= f.label :notes %>
  <%= f.text_area :notes, size: "60x6", placeholder: @task.notes || "For notes general to the task.  Add specific details/todos about  task in next step." %>
  <br />
  <%= f.submit "Create" %>
<% end %>