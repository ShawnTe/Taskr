<h1><%= @task.title %></h1>
<div>
  Next up: <%= @task.first_due_date.strftime("%B %d, %Y") %>

  (every <%= @task.frequency_number %> <%= @task.frequency_unit.singularize %>)
</div>
<%= link_to "Link to add details", new_detail_path(:task => {:task_id => @task.id}) %>


<div>
  <% if @task.last_date_done %>
    <h2>Last done:</h2>
    <ul>
      <li><%= @task.last_date_done.strftime("%B %Y") %></li>
    </ul>
  <% end %>
</div>

<div>
  <h2>To Do...</h2>
  <ul>
      <% @task.details.each do |detail| %>
        <% if detail.todo.instance_of? SupplyDetail %>
          <li>Get supplies (<%= detail.todo.name %>) </li>
        <% else %>
          <li>Make appointment: (<%= link_to detail.todo.company, detail_path(detail.id) || detail.todo.name %>) </li>
        <% end %>

    <% end %>
  </ul>
</div>

<div>
  <h2>Notes</h2>
  <%= @task.notes %>
</div>
