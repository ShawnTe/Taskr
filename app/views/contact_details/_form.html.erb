<h2>Edit contact</h2>
<%= simple_form_for @detail do |form| %>
    <%= form.hidden_field :todo_type, value: ContactDetail %>
  <%= form.simple_fields_for :todo do |todo_form| %>
    <%= hidden_field_tag 'task_id', @task.id %>

    <div class="the-icons"><i class="demo-icon icon-building"></i>
    <%= todo_form.text_field :company, placeholder: @detail.todo.company || "company" %></div>

    <div class="the-icons"><i class="demo-icon icon-user"></i>
    <%= todo_form.text_field :name, placeholder: @detail.todo.name || "name" %></div>

    <div class="the-icons"><i class="demo-icon icon-globe"></i>
    <%= todo_form.text_field :url, placeholder: @detail.todo.url || "url" %>

    </div>



    <div class="the-icons"><i class="demo-icon icon-envelope-open-o"></i>
    <%= todo_form.text_field :email, placeholder: (@detail.todo.email || "email") %></div>

    <div class="the-icons"><i class="demo-icon icon-volume-control-phone"></i>
    <%= todo_form.text_field :work_phone, placeholder: @detail.todo.work_phone || "landline" %></div>

    <div class="the-icons"><i class="demo-icon icon-mobile"></i>
    <%= todo_form.text_field :mobile_phone, placeholder: @detail.todo.mobile_phone || "mobile" %></div>

    <div class="the-icons"><i class="demo-icon icon-doc-text"></i>
    <%= todo_form.text_area :notes, size: "40x6", placeholder: @detail.todo.notes || "notes" %></div>

  <% end %>
  <%= form.submit "Submit" %>
<% end %>

